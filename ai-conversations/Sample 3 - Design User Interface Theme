```python
import ipywidgets as widgets
from IPython.display import display, HTML, clear_output

# ---- ğŸ¨ Global Style ----
style_html = """
<style>
.top-section {
    background-color: #f3e8ff;
    border-radius: 15px;
    padding: 15px 20px;
    box-shadow: 0px 2px 8px rgba(150, 100, 255, 0.15);
    margin-bottom: 15px;
    font-family: 'Segoe UI', 'Helvetica Neue', sans-serif;
}
.title {
    color: #5b3cc4;
    font-size: 22px;
    font-weight: 600;
    margin-bottom: 10px;
}
.subtitle {
    color: #6a6a6a;
    font-size: 14px;
    margin-top: -5px;
    margin-bottom: 15px;
}
.chat-section {
    background-color: #f9f6ff;
    border-radius: 15px;
    padding: 15px 20px;
    box-shadow: 0px 2px 8px rgba(150, 100, 255, 0.1);
    font-family: 'Segoe UI', 'Helvetica Neue', sans-serif;
}
.chat-title {
    color: #5b3cc4;
    font-size: 18px;
    font-weight: 600;
    margin-bottom: 10px;
}
</style>
"""
display(HTML(style_html))

# ---- ğŸŒ¤ï¸ Top Section Components ----
title = widgets.HTML("<div class='title'>ğŸŒ¤ï¸ Weather Advisor â€” Control Panel</div>")
subtitle = widgets.HTML("<div class='subtitle'>Select a function below to explore weather data or chat with our assistant.</div>")

# Input
city_input = widgets.Text(
    placeholder='Enter a city name (e.g. Sydney)',
    description='City:',
    style={'description_width': '70px'},
    layout=widgets.Layout(width='300px')
)

# Two Main Bottoms
btn_current = widgets.Button(
    description='Current Weather',
    button_style='',
    layout=widgets.Layout(width='150px', height='35px'),
    style={'button_color': '#c7a4ff', 'font_weight': 'bold'}
)

btn_forecast = widgets.Button(
    description='Forecast Weather',
    button_style='',
    layout=widgets.Layout(width='150px', height='35px'),
    style={'button_color': '#c7a4ff', 'font_weight': 'bold'}
)

# Confirm
confirm_btn = widgets.Button(
    description='Confirm',
    button_style='',
    layout=widgets.Layout(width='100px', height='35px'),
    style={'button_color': '#b388ff', 'font_weight': 'bold'}
)

# Top-section
top_section = widgets.VBox([
    title, subtitle,
    widgets.HBox([btn_current, btn_forecast, city_input, confirm_btn])
])
display(HTML("<div class='top-section'>"))
display(top_section)
display(HTML("</div>"))

# ---- ğŸ’¬ Chatbot Section ----
chat_output = widgets.Output()
chat_input = widgets.Text(
    placeholder='Type your question here...',
    description='You:',
    style={'description_width': '50px'},
    layout=widgets.Layout(width='400px')
)
send_button = widgets.Button(
    description='Send ğŸ’¬',
    style={'button_color': '#c7a4ff', 'font_weight': 'bold'},
    layout=widgets.Layout(width='100px')
)

# ChatBot Response
def chatbot_response(msg):
    msg = msg.lower()
    if "temperature" in msg:
        return "ğŸŒ¡ï¸ The current temperature is around 22Â°C."
    elif "uv" in msg:
        return "â˜€ï¸ The UV index is moderate today."
    elif "rain" in msg:
        return "ğŸŒ§ï¸ Thereâ€™s a small chance of rain today."
    else:
        return "ğŸ¤– I can help you with temperature, UV, or rain info!"

# Chat Logic
def send_message(_):
    user_text = chat_input.value.strip()
    if not user_text:
        return
    with chat_output:
        display(HTML(f"<b style='color:#4b0082;'>ğŸ‘¤ You:</b> {user_text}"))
        display(HTML(f"<b style='color:#5b3cc4;'>ğŸ¤– Bot:</b> {chatbot_response(user_text)}"))
    chat_input.value = ""

send_button.on_click(send_message)

# Chat section layout
chatbox = widgets.VBox([
    widgets.HTML("<div class='chat-title'>ğŸ’¬ Chat with WeatherBot</div>"),
    widgets.HBox([chat_input, send_button]),
    chat_output
])
display(HTML("<div class='chat-section'>"))
display(chatbox)
display(HTML("</div>"))
```

